{
  "name": "virto-api",
  "version": "1.0.0",
  "description": "NestJS API for Virto services",
  "bin": "src/main.js",
  "main": "src/main.js",
  "pkg": {
    "targets": [
      "node22-macos-arm64"
    ],
    "outputPath": ".",
    "assets": [
      "dist/**/*.html",
      "dist/static/**/*.js"
    ]
  },
  "scripts": {
    "postinstall": "papi",
    "release": "npx @yao-pkg/pkg . --output virto-demo",
    "build": "tsc && npm run copy-static",
    "copy-static": "mkdir -p dist/static && cp -r src/static/* dist/static/",
    "bundle": "npx @vercel/ncc build src/main.ts --asset-builds -m -o bundle --target es5",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "clean:src": "find ./src -name '*.map' -type f -exec rm -rf {} \\; && find ./src -name '*.js' -type f -exec rm -rf {} \\;",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:unit": "jest --config jest.unit.js",
    "test:integration": "jest --config jest.integration.js",
    "test:e2e": "jest --config jest.e2e.js",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@acala-network/chopsticks": "^1.0.3",
    "@nestjs/common": "^11.0.16",
    "@nestjs/core": "^11.0.16",
    "@nestjs/platform-express": "^11.0.16",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^11.1.4",
    "@polkadot-api/descriptors": "file:.papi/descriptors",
    "@polkadot-api/substrate-bindings": "^0.14.0",
    "@polkadot/api": "^15.8.1",
    "@polkadot/keyring": "^13.2.3",
    "@polkadot/util": "^13.4.3",
    "@types/cookie-parser": "^1.4.8",
    "@virtonetwork/authenticators-webauthn": "^1.1.3",
    "body-parser": "^1.20.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "es-arraybuffer-base64": "^1.1.2",
    "express": "^5.0.0",
    "hash-wasm": "^4.12.0",
    "morgan": "^1.10.0",
    "polkadot-api": "^1.13.0",
    "puppeteer": "^24.8.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "uuid": "^11.1.0",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.6",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.16",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.14.1",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.18.0",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "chai": "^5.2.0",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "nid-webauthn-emulator": "^0.2.2",
    "prettier": "^3.5.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
